
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item">Menüler</h3>
        <a href="/Admin/Index/" class="w3-bar-item w3-button">Bloglar</a>
        <a href="Admin/YorumListesi/" class="w3-bar-item w3-button">Yorumlar</a>
        <a href="/Admin/İletisim/" class="w3-bar-item w3-button">İletişim</a>
        <a href="/Admin/Hakkimizda/" class="w3-bar-item w3-button">Hakkımızda</a>

        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    </div>

    <!-- Page Content -->
    <div style="margin-left:15%">

        <div class="w3-container w3-teal">
            <h3>Admin Yönetim Paneli</h3>

            <div class="nav navbar-nav navbar-right" style="margin-right:35px;">
                <a href="/Default/Index/" class="w3-bar-item w3-button">Siteye Git</a>
            </div>
            <div class="nav navbar-nav navbar-right" style="margin-right:15px;">
                <a href="/GirisYap/LogOut/" class="w3-bar-item w3-button">Çıkış Yap</a>
            </div>
        </div>

        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>
