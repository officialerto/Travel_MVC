@using TravelTripProje.Models.Sınıflar
@model List<Blog>

<div class="box1-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetay/@x.ID"><img src="@x.BlogImage" alt="" style="width:122px; height:78px;"/></a>
        </div>
    <div class="bot-desc1">
        <p>@x.Aciklama.Substring(0, 100)...</p>
    </div>
    <div class="clear"></div>
    }
</div>
